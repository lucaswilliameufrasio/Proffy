{
    "extends": [
        "universe/native",
        "universe/shared/typescript-analysis"
    ],
    "overrides": [
        {
            "files": [
                "*.ts",
                "*.tsx",
                "*.d.ts"
            ],
            "parserOptions": {
                "project": "./tsconfig.json"
            }
        }
    ],
    "rules": {
        "import/order": [
            "error",
            {
                "groups": [
                    "builtin",
                    [
                        "sibling",
                        "parent"
                    ],
                    "internal",
                    "external",
                    "index",
                    "object"
                ]
            }
        ]
    }
}